# ===========================================
# FlashFusion Unified - Environment Configuration
# ===========================================

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=FlashFusion Unified
APP_VERSION=2.0.0

# Domain and CORS Configuration
DOMAIN=localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
API_RATE_LIMIT_MAX=500
AUTH_RATE_LIMIT_MAX=10

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://flashfusion:your_secure_password@localhost:5432/flashfusion_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flashfusion_dev
DB_USER=flashfusion
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_KEYPREFIX=flashfusion:

# Authentication Configuration
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
SESSION_SECRET=your_session_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_32_chars_long_
CRYPTO_ALGORITHM=aes-256-gcm
COOKIE_SECRET=your_cookie_secret_key

# AI Services (at least one required)
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
GOOGLE_AI_API_KEY=your_google_ai_key

# Database (Supabase)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key_here

# Third-party Integrations
NOTION_API_KEY=your_notion_key_here
GITHUB_TOKEN=your_github_token_here
ZAPIER_WEBHOOK_URL=your_zapier_webhook_url_here
FIRECRAWL_API_KEY=your_firecrawl_api_key

# Vercel Deployment (required for DevOps agent)
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# GoDaddy Domain (optional for DNS automation)
GODADDY_API_KEY=your_godaddy_key_here
GODADDY_API_SECRET=your_godaddy_secret_here

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Metrics and Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@flashfusion.ai

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Development Tools
DEBUG=flashfusion:*
ENABLE_SWAGGER=true
ENABLE_CORS_DEBUG=false

# Deployment Configuration
ROLLBACK_MAX_RELEASES=5
BACKUP_RETENTION_DAYS=30
HEALTH_CHECK_INTERVAL=30

# Feature Flags
FEATURE_AUTH_ENABLED=true
FEATURE_METRICS_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=true
FEATURE_SENTRY_ENABLED=false

# Performance Configuration
MAX_JSON_SIZE=1mb
MAX_URL_ENCODED_SIZE=1mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/private/privkey.pem
SSL_CA_PATH=/etc/ssl/certs/chain.pem

# Docker Configuration
COMPOSE_PROJECT_NAME=flashfusion
POSTGRES_PASSWORD=your_postgres_password
REDIS_PASSWORD=your_redis_password
GRAFANA_PASSWORD=your_grafana_password