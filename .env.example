# FlashFusion Unified Platform Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# CORE PLATFORM CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Application Settings
APP_NAME=FlashFusion Unified
APP_VERSION=2.0.0
BASE_URL=http://localhost:3000

# ========================================
# AI SERVICE PROVIDERS
# ========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic/Claude Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# DATABASE & STORAGE
# ========================================

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis Configuration (for agent coordination & caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ========================================
# AUTHENTICATION & SECURITY
# ========================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your_session_secret_here

# API Security
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# DEVELOPMENT WORKFLOW INTEGRATIONS
# ========================================

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# Vercel Integration
VERCEL_TOKEN=your_vercel_token_here

# Docker Hub
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# ========================================
# COMMERCE WORKFLOW INTEGRATIONS
# ========================================

# Shopify Integration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret

# Amazon SP-API
AMAZON_CLIENT_ID=your_amazon_client_id
AMAZON_CLIENT_SECRET=your_amazon_client_secret
AMAZON_REFRESH_TOKEN=your_amazon_refresh_token

# eBay Integration
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret

# Etsy Integration
ETSY_API_KEY=your_etsy_api_key
ETSY_SHARED_SECRET=your_etsy_shared_secret

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# PayPal Integration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ========================================
# CONTENT WORKFLOW INTEGRATIONS  
# ========================================

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# TikTok Business API
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Instagram Basic Display API
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Twitter API v2
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# WordPress Integration
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_PASSWORD=your_wordpress_application_password

# Buffer API
BUFFER_ACCESS_TOKEN=your_buffer_access_token

# ========================================
# EMAIL & COMMUNICATION
# ========================================

# SendGrid Email
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Mailchimp Integration
MAILCHIMP_API_KEY=your_mailchimp_api_key

# Klaviyo Integration  
KLAVIYO_API_KEY=your_klaviyo_api_key

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ========================================
# WEB SCRAPING & RESEARCH
# ========================================

# Firecrawl Integration
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Playwright Browser Settings
PLAYWRIGHT_BROWSERS_PATH=./browsers
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false

# Proxy Configuration (optional)
PROXY_URL=your_proxy_url_here
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# ========================================
# ANALYTICS & MONITORING  
# ========================================

# Google Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Mixpanel Analytics
MIXPANEL_TOKEN=your_mixpanel_token

# Sentry Error Monitoring
SENTRY_DSN=your_sentry_dsn_here

# New Relic Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# ========================================
# AGENT ORCHESTRATION SETTINGS
# ========================================

# Agent Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=300000
HANDOFF_TIMEOUT=60000
ENABLE_AGENT_LOGGING=true

# Workflow Settings
MAX_WORKFLOW_STEPS=100
WORKFLOW_TIMEOUT=1800000
ENABLE_WORKFLOW_CACHING=true

# Cross-Workflow Intelligence
ENABLE_CROSS_WORKFLOW_DATA_SHARING=true
DATA_RETENTION_DAYS=90
ENABLE_PREDICTIVE_ANALYTICS=true

# ========================================
# DEVELOPMENT & DEBUGGING
# ========================================

# Debug Settings
DEBUG=flashfusion:*
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Testing Configuration
TEST_DATABASE_URL=your_test_database_url
TEST_REDIS_URL=redis://localhost:6380

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_EXPERIMENTAL_AGENTS=false
ENABLE_ADVANCED_ANALYTICS=true

# ========================================
# DEPLOYMENT & SCALING
# ========================================

# Load Balancing
CLUSTER_MODE=false
WORKER_PROCESSES=auto

# Caching
ENABLE_REDIS_CACHING=true
CACHE_TTL=3600

# File Storage
FILE_UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# CDN Configuration
CDN_URL=your_cdn_url_here
STATIC_ASSETS_URL=your_static_assets_url

# ========================================
# BUSINESS METRICS & BILLING
# ========================================

# Subscription Management
STRIPE_WEBHOOK_ENDPOINT_SECRET=your_stripe_webhook_endpoint_secret

# Usage Tracking
TRACK_API_USAGE=true
API_USAGE_WINDOW=monthly
FREE_TIER_LIMITS=100

# Business Intelligence
ENABLE_REVENUE_TRACKING=true
ENABLE_USER_ANALYTICS=true
ENABLE_WORKFLOW_METRICS=true