# ═══════════════════════════════════════════════════════════════
# 🚀 FLASHFUSION UNIFIED ENVIRONMENT CONFIGURATION
# ═══════════════════════════════════════════════════════════════

# ────────────────🏗️ APPLICATION CORE────────────────
NODE_ENV=development
PORT=3001
APP_NAME=FlashFusion-Unified
APP_VERSION=1.0.0
APP_URL=http://localhost:3001
API_BASE_URL=http://localhost:3001/api

# ────────────────🔐 SECURITY & AUTHENTICATION────────────────
JWT_SECRET=your-super-secure-jwt-secret-key-here-32-chars-minimum
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ────────────────📊 SUPABASE DATABASE────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
DATABASE_URL=postgresql://postgres:password@localhost:5432/flashfusion

# ────────────────⚡ REDIS CONFIGURATION────────────────
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# ────────────────🤖 AI SERVICES────────────────

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION_ID=org-your-organization-id

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_PROJECT_ID=your-google-project-id

# Hugging Face
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key

# Cohere
COHERE_API_KEY=your-cohere-api-key

# ────────────────🔗 LANGCHAIN CONFIGURATION────────────────

# Core LangChain
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=ls__your-langchain-api-key
LANGCHAIN_PROJECT=FlashFusion-Development

# LangSmith (Optional - for monitoring)
LANGSMITH_API_KEY=ls__your-langsmith-api-key

# Vector Databases
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=flashfusion-index

WEAVIATE_URL=https://your-cluster.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key

CHROMA_HOST=localhost
CHROMA_PORT=8000

# ────────────────🔗 OAUTH PROVIDERS────────────────

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Replit OAuth
REPLIT_CLIENT_ID=your-replit-client-id
REPLIT_CLIENT_SECRET=your-replit-client-secret

# Third-party Integrations
NOTION_API_KEY=your_notion_key_here
GITHUB_TOKEN=your_github_token_here
ZAPIER_WEBHOOK_URL=your_zapier_webhook_url_here
FIRECRAWL_API_KEY=your_firecrawl_api_key

# Vercel Deployment (required for DevOps agent)
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# GoDaddy Domain (optional for DNS automation)
GODADDY_API_KEY=your_godaddy_key_here
GODADDY_API_SECRET=your_godaddy_secret_here

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=flashfusion
SENTRY_PROJECT=javascript-nextjs
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Metrics and Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@flashfusion.ai

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Development Tools
DEBUG=flashfusion:*
ENABLE_SWAGGER=true
ENABLE_CORS_DEBUG=false

# Deployment Configuration
ROLLBACK_MAX_RELEASES=5
BACKUP_RETENTION_DAYS=30
HEALTH_CHECK_INTERVAL=30

# Feature Flags
FEATURE_AUTH_ENABLED=true
FEATURE_METRICS_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=true
FEATURE_SENTRY_ENABLED=false

# Performance Configuration
MAX_JSON_SIZE=1mb
MAX_URL_ENCODED_SIZE=1mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/private/privkey.pem
SSL_CA_PATH=/etc/ssl/certs/chain.pem

# Docker Configuration
COMPOSE_PROJECT_NAME=flashfusion
POSTGRES_PASSWORD=your_postgres_password
REDIS_PASSWORD=your_redis_password
GRAFANA_PASSWORD=your_grafana_password