# FlashFusion AI Platform Environment Configuration

# Core Settings
COMPOSE_PROJECT_NAME=flashfusion-ai-platform
PLATFORM_VERSION=1.0.0
ENVIRONMENT=development

# API Keys (Add your actual keys here)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GROQ_API_KEY=your-groq-api-key-here
MISTRAL_API_KEY=your-mistral-api-key-here

# Claude Code Integration
CLAUDE_CODE_ENABLED=true
CLAUDE_CODE_WEBHOOK_SECRET=flashfusion-claude-webhook-secret

# Open WebUI Settings
WEBUI_SECRET_KEY=flashfusion-super-secret-key-2024
WEBUI_AUTH=false
WEBUI_NAME="FlashFusion AI Platform"
WEBUI_URL=http://localhost:3000

# FlashFusion IDE Settings
IDE_PORT=8080
IDE_WORKSPACE_PATH=./workspace
IDE_AI_INTEGRATION=true
IDE_AUTO_SAVE=true

# Code Server Settings
CODE_SERVER_PASSWORD=flashfusion2024
CODE_SERVER_EXTENSIONS="ms-python.python,ms-vscode.vscode-typescript-next,github.copilot,ms-vscode.vscode-json"

# Database Settings
POSTGRES_DB=flashfusion
POSTGRES_USER=flashfusion
POSTGRES_PASSWORD=flashfusion_secure_2024
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=""

# Ollama Settings
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_ORIGINS="*"
OLLAMA_MODELS="llama3.1:8b,codellama:13b,mistral:7b,qwen2.5-coder:7b"

# Development Settings
NODE_ENV=development
DEBUG=flashfusion:*
LOG_LEVEL=info

# Security Settings
JWT_SECRET=flashfusion-jwt-secret-key-2024
SESSION_SECRET=flashfusion-session-secret-2024
CORS_ORIGIN="http://localhost:80,http://localhost:3000,http://localhost:8080"

# AI Model Settings
DEFAULT_MODEL=gpt-4
FALLBACK_MODEL=llama3.1:8b
MAX_TOKENS=4096
TEMPERATURE=0.7

# RAG Settings
RAG_ENABLED=true
EMBEDDING_MODEL=text-embedding-3-small
VECTOR_STORE=chroma
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Monitoring & Analytics
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30