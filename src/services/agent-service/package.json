{
  "name": "@flashfusion/agent-service",
  "version": "1.0.0",
  "description": "FlashFusion AI Agent Management Service",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "build": "tsc",
    "docker:build": "docker build -t flashfusion/agent-service .",
    "docker:run": "docker run -p 3001:3001 flashfusion/agent-service",
    "k8s:deploy": "kubectl apply -f k8s/",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run"
  },
  "keywords": [
    "ai",
    "agents",
    "microservice",
    "flashfusion",
    "automation"
  ],
  "author": "FlashFusion Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.17.0",
    "dotenv": "^16.6.1",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.0",
    "openai": "^4.0.0",
    "axios": "^1.6.0",
    "rate-limiter-flexible": "^3.0.0",
    "bull": "^4.10.4",
    "redis": "^5.6.1",
    "pg": "^8.11.0",
    "knex": "^2.4.2",
    "prom-client": "^14.2.0",
    "swagger-ui-express": "^4.6.2",
    "yamljs": "^0.3.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.0",
    "eslint": "^8.39.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/src/**/*.test.js"
    ]
  }
}