{
  "version": 2,
  "functions": {
    "api/main.js": {
      "maxDuration": 10
    },
    "api/webhooks/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api/main" },
    { "source": "/api/webhooks/(.*)", "destination": "/api/webhooks/$1" },
    { "source": "/(.*)", "destination": "/api/main" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Deployment-Mode",
          "value": "bulletproof"
        },
        {
          "key": "X-Logger-Status",  
          "value": "winston-disabled"
        }
      ]
    }
  ]
}