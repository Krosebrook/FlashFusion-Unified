{
  "version": 2,
  "functions": {
    "api/bulletproof.js": {
      "maxDuration": 5
    },
    "api/hello.js": {
      "maxDuration": 10
    },
    "api/mcp.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/mcp/(.*)", "destination": "/api/mcp" },
    { "source": "/", "destination": "/api/index" },
    { "source": "/(.*)", "destination": "/api/index" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Deployment-Mode",
          "value": "bulletproof"
        },
        {
          "key": "X-Logger-Status",  
          "value": "winston-disabled"
        }
      ]
    }
  ]
}