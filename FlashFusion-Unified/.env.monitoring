# FlashFusion Monitoring Configuration
# Copy this to your .env file or create .env.monitoring

# Monitoring Service
MONITORING_ENABLED=true
MONITORING_WS_PORT=8081
METRICS_WS_PORT=8082
LOG_LEVEL=info

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Metrics Collection
METRICS_COLLECTION_INTERVAL=10000
METRICS_RETENTION_DAYS=7

# Alerts
ENABLE_AUTO_RESOLUTION=true
ALERT_MAX_ATTEMPTS=3
ENABLE_NOTIFICATIONS=true

# Logging
ENABLE_FILE_LOGGING=true
ENABLE_ANALYTICS=true
MAX_LOG_SIZE_MB=100
MAX_LOG_FILES=10

# External Services (Optional)
# REMOTE_LOGGING_ENDPOINT=https://your-logging-service.com/api/logs
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# EMAIL_SMTP_HOST=smtp.your-provider.com
# EMAIL_SMTP_PORT=587
