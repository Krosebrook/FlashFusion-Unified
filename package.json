{
  "name": "flashfusion-unified",
  "version": "2.0.0",
  "description": "The AI operating system that turns your business ideas into automated revenue streams",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "dev:client": "cd client && npm start",
    "start:legacy": "node src/server/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "node scripts_legacy/validate_env.js",
    "health": "node scripts/health-check.js",
    "setup": "node scripts/setup.js",
    "orchestrate": "node scripts_legacy/orchestrate.sh",
    "mcp-demo": "node src/server/services/mcp/demo_mcp_governance.ts",
    "security-check": "npm run validate && npm run health",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "build": "npm run build:server",
    "build:client": "echo 'No client build needed - using Angular dashboard'",
    "build:server": "babel src --out-dir dist",
    "build:angular": "cd flashfusion-dashboard && npm run build",
    "workflow:create": "node scripts/create-workflow.js",
    "agent:create": "node scripts/create-agent.js",
    "migrate": "node scripts/migrate.js",
    "dev:install": "npm install && cd client && npm install",
    "deploy": "npm run security-check && npm run test && npm run build && npm run deploy:vercel",
    "deploy:vercel": "vercel --prod",
    "docs": "jsdoc src/ -r -d docs/",
    "benchmark": "node scripts/benchmark.js",
    "cli": "node scripts_legacy/cli.js",
    "test-webscraping": "node scripts_legacy/test-web-scraping.js",
    "docker:build": "docker build -t flashfusion-unified .",
    "docker:run": "docker run -p 3000:3000 flashfusion-unified",
    "vercel:dev": "vercel dev"
  },
  "keywords": [
    "ai",
    "automation",
    "business-operating-system",
    "workflow-orchestration",
    "multi-agent-system",
    "ecommerce-automation",
    "content-creation",
    "saas-development",
    "artificial-intelligence",
    "business-automation"
  ],
  "author": "FlashFusion Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/FlashFusion-Unified.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/FlashFusion-Unified/issues"
  },
  "homepage": "https://flashfusion.ai",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@mendable/firecrawl-js": "^1.29.2",
    "@supabase/supabase-js": "^2.38.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.4",
    "chalk": "^5.3.0",
    "commander": "^9.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "figlet": "^1.7.0",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.0",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "openai": "^4.0.0",
    "ora": "^7.0.1",
    "playwright": "^1.54.1",
    "rate-limiter-flexible": "^3.0.0",
    "redis": "^5.6.1",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^4.6.2",
    "uuid": "^9.0.0",
    "winston": "^3.17.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@angular/cli": "^20.1.2",
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/node": "^20.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^13.2.1",
    "nodemon": "^3.0.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/src/**/*.test.js"
    ]
  }
}
