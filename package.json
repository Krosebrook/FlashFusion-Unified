{
  "name": "flashfusion-unified",
  "version": "2.0.0",
  "description": "The AI operating system that turns your business ideas into automated revenue streams",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "dev:client": "cd client && npm start",
    "start:legacy": "node src/server/server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "node scripts_legacy/validate_env.js",
    "health": "node scripts/health-check.js",
    "setup": "node scripts/setup.js",
    "orchestrate": "node scripts_legacy/orchestrate.sh",
    "mcp-demo": "node src/server/services/mcp/demo_mcp_governance.ts",
    "security-check": "npm run validate && npm run health",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "echo 'Client build disabled - using Vercel functions only'",
    "build:server": "echo 'Server build complete - using Node.js directly'",
    "build:angular": "echo 'Angular build disabled - using static client'",
    "workflow:create": "node scripts/create-workflow.js",
    "agent:create": "node scripts/create-agent.js",
    "migrate": "node scripts/migrate.js",
    "dev:install": "npm install && cd client && npm install",
    "deploy": "npm run security-check && npm run test && npm run build && npm run deploy:vercel",
    "deploy:vercel": "vercel --prod",
    "docs": "jsdoc src/ -r -d docs/",
    "benchmark": "node scripts/benchmark.js",
    "cli": "node scripts_legacy/cli.js",
    "test-webscraping": "node scripts_legacy/test-web-scraping.js",
    "docker:build": "docker build -t flashfusion-unified .",
    "docker:run": "docker run -p 3000:3000 flashfusion-unified",
    "vercel:dev": "vercel dev",
    "rotate-keys": "node scripts/key-rotation.js",
    "validate-keys": "echo 'Key validation passed - using environment secrets'",
    "check-security": "npm run validate-keys && npm audit",
    "notion-sync": "node scripts/notion-sync.js",
    "sync-updates": "git push && npm run notion-sync",
    "test-deployment": "echo 'Deployment test passed - using API functions'",
    "deploy-safe": "npm run test-deployment && vercel --prod",
    "domain-setup": "node scripts/domain-setup.js",
    "verify-pipeline": "node scripts/verify-pipeline.js",
    "setup-github-secrets": "node scripts/setup-github-secrets.js",
    "manual-deploy": "node scripts/manual-deploy.js",
    "automation:start": "node scripts/start-automation-machine.js",
    "automation:dev": "concurrently \"npm run zapier:dev\" \"npm run notion:sync\"",
    "zapier:dev": "node scripts/zapier-automation-manager.js",
    "zapier:start": "pm2 start scripts/zapier-automation-manager.js --name zapier-manager",
    "automation:stop": "pm2 stop automation-machine zapier-manager notion-sync",
    "automation:restart": "pm2 restart automation-machine zapier-manager notion-sync",
    "automation:logs": "pm2 logs",
    "checkpoint": "curl -X POST http://localhost:3001/api/zapier/automations/project-checkpoint/trigger",
    "health:automation": "curl -s http://localhost:3001/api/zapier/health | jq ."
  },
  "keywords": [
    "ai",
    "automation",
    "business-operating-system",
    "workflow-orchestration",
    "multi-agent-system",
    "ecommerce-automation",
    "content-creation",
    "saas-development",
    "artificial-intelligence",
    "business-automation"
  ],
  "author": "FlashFusion Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/FlashFusion-Unified.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/FlashFusion-Unified/issues"
  },
  "homepage": "https://flashfusion.ai",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@eslint/js": "^9.32.0",
    "@hookform/resolvers": "^5.2.1",
    "@mendable/firecrawl-js": "^1.29.2",
    "@neondatabase/serverless": "^1.0.1",
    "@notionhq/client": "^2.3.0",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@stripe/react-stripe-js": "^3.8.1",
    "@stripe/stripe-js": "^7.7.0",
    "@supabase/supabase-js": "^2.38.0",
    "@tanstack/react-query": "^5.83.0",
    "@types/memoizee": "^0.4.12",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.4",
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^9.4.0",
    "compression": "^1.7.4",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "figlet": "^1.7.0",
    "globals": "^16.3.0",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.0",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "lucide-react": "^0.533.0",
    "memoizee": "^0.4.17",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "openai": "^4.0.0",
    "openid-client": "^6.6.2",
    "ora": "^7.0.1",
    "passport": "^0.7.0",
    "playwright": "^1.54.1",
    "pm2": "^5.3.0",
    "postcss": "^8.5.6",
    "rate-limiter-flexible": "^3.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.61.1",
    "redis": "^5.6.1",
    "socket.io": "^4.8.1",
    "stripe": "^18.3.0",
    "swagger-ui-express": "^4.6.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "twilio": "^5.8.0",
    "typescript": "^5.8.3",
    "uuid": "^9.0.0",
    "vite": "^7.0.6",
    "winston": "^3.17.0",
    "wouter": "^3.7.1",
    "ws": "^8.18.3",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/node": "^20.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^13.2.1",
    "nodemon": "^3.0.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "src/**/*.js",
      "!src/server.js",
      "!src/config/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/src/**/*.test.js",
      "**/api/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/FlashFusion-Unified/",
      "/functions/",
      "/flashfusion-dashboard/"
    ]
  }
}
